<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Update Camp</h1>
  <div class="col-6 offset-3">
    <form
      action="/neercamp/<%=camp.id%>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title"> Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="camp[title]"
          value="<%=camp.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Provide a Title</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location"> Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="camp[location]"
          value="<%=camp.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Provide camp location</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image"> Image Url</label>

        <input
          class="form-control"
          type="text"
          id="image"
          name="camp[image]"
          value="<%=camp.image%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Provide image url</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Camp Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            name="camp[price]"
            class="form-control"
            type="text"
            class="input-group-text"
            id="price"
            value="<%=camp.price%>"
            aria-label="price-label"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please Provide camp price</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description"> Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="camp[description]"
          required
        >
<%=camp.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please Provide camp description</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update camp</button>
      </div>
    </form>
    <a href="/neercamp">cancel</a>
  </div>
</div>
