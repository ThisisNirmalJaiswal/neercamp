<% layout('layouts/boilerplate') %>
<h1>All Camps</h1>
<div>
  <a href="/neercamp/new">create a new camp</a>
</div>
<%for(let camp of camps){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="<%=camp.image%>" alt="" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><%=camp.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=camp.location%></small>
        </p>
        <a class="btn btn-primary" href="/neercamp/<%=camp._id%>"
          >view <%=camp.title%></a
        >
      </div>
    </div>
  </div>
</div>
<% }%>
